@model List<Barnamenevisan.Domain.ViewModels.Blog.CategoryDisplayViewModel>

<!-- Category -->
<section class="border-radius category-side">
    <header><h3> دسته بندی ها </h3></header>
    <article>
        <ul class="category-menu">
            @foreach (var viewModel in Model)
            {
                <li>
                    <h2><a asp-action="Category" asp-route-id="@viewModel.Id">@viewModel.Title</a></h2>
                </li>
            }
        </ul>
    </article>
</section>
<!-- End Category -->